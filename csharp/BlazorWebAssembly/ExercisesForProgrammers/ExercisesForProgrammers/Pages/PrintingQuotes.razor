@page "/printingquotes"
@using ExercisesForProgrammers.Models

<EditForm Model="@printingQuotesModel" OnSubmit="HandleSubmit">
    <div class="form-group row">
        <label for="quote" class="col-sm-2 col-form-label">What is the quote?</label>
        <div class="col-sm-10">
            <InputText id="quote" @bind-Value="printingQuotesModel.Quote" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="who" class="col-sm-2 col-form-label">Who said it?</label>
        <div class="col-sm-10">
            <InputText id="who" @bind-Value="printingQuotesModel.Who" class="form-control"/>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Generate Quote</button>
        </div>
    </div>
</EditForm>

<p>
    @QuoteText
</p>

@code
{
    PrintingQuotesModel printingQuotesModel = new PrintingQuotesModel();

    public string QuoteText { get; private set; } = "";

    private void HandleSubmit()
    {
        QuoteText = $"{printingQuotesModel.Who} says, \"{printingQuotesModel.Quote}\"";
    }
}
