@page "/printingquotes"
@using ExercisesForProgrammers.Models

<EditForm Model="@model" OnSubmit="HandleSubmit">
    <div class="form-group row">
        <label for="quote" class="col-sm-2 col-form-label">What is the quote?</label>
        <div class="col-sm-10">
            <InputText id="quote" @bind-Value="model.Quote" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="who" class="col-sm-2 col-form-label">Who said it?</label>
        <div class="col-sm-10">
            <InputText id="who" @bind-Value="model.Who" class="form-control"/>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Generate Quote</button>
        </div>
    </div>
</EditForm>

<p>
    @FullQuote
</p>

@code
{
    PrintingQuotesModel model = new PrintingQuotesModel();

    public string FullQuote { get; private set; } = "";

    private void HandleSubmit()
    {
        FullQuote = model.FullQuote;
    }
}
