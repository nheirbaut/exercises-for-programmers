@page "/madlibs"

@using ExercisesForProgrammers.Models

<EditForm Model="@model" OnSubmit="HandleSubmit">
    <div class="form-group row">
        <label for="quote" class="col-sm-2 col-form-label">Enter a noun:</label>
        <div class="col-sm-10">
            <InputText id="quote" @bind-Value="model.Noun" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label for="who" class="col-sm-2 col-form-label">Enter a verb:</label>
        <div class="col-sm-10">
            <InputText id="who" @bind-Value="model.Verb" class="form-control"/>
        </div>
    </div>
    <div class="form-group row">
        <label for="who" class="col-sm-2 col-form-label">Enter an adjective:</label>
        <div class="col-sm-10">
            <InputText id="who" @bind-Value="model.Adjective" class="form-control"/>
        </div>
    </div>
    <div class="form-group row">
        <label for="who" class="col-sm-2 col-form-label">Enter an adverb:</label>
        <div class="col-sm-10">
            <InputText id="who" @bind-Value="model.Adverb" class="form-control"/>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create Story</button>
        </div>
    </div>
</EditForm>

<p>
    @Story
</p>

@code
{
    MadLibsModel model = new MadLibsModel();

    public string Story { get; private set; }

    private void HandleSubmit()
    {
        Story = model.Story;
    }
}
